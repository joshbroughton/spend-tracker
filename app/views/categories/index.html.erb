<h1>Categories</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <%= link_to 'Edit', edit_category_path(category) %> |
          <%= link_to 'Delete', category, data: {turbo_method: :delete, turbo_confirm: "you sure?"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add New Category', new_category_path %>
